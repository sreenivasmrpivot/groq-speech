# Groq Speech SDK Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Groq API Configuration
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_BASE=https://api.groq.com/openai/v1

# ============================================================================
# HuggingFace Configuration (for Pyannote.audio)
# ============================================================================
HF_TOKEN=your_hf_token_here

# ============================================================================
# Audio Configuration
# ============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# ============================================================================
# Diarization Real-time Processing (OPTIMIZED for microphone input)
# ============================================================================

# Real-time segment duration in seconds (5.0 for responsive output)
DIARIZATION_REALTIME_SEGMENT_DURATION=5.0

# Real-time chunking strategy: 'fixed', 'adaptive', 'conversation_aware' (default: fixed for speed)
DIARIZATION_REALTIME_CHUNK_STRATEGY=fixed

# Real-time chunk duration in seconds (5.0 for fast processing)
DIARIZATION_REALTIME_CHUNK_DURATION=5.0

# Real-time overlap between chunks in seconds (1.0 for smooth transitions)
DIARIZATION_REALTIME_OVERLAP_DURATION=1.0

# Real-time minimum segment duration in seconds (1.0 for quick detection)
DIARIZATION_REALTIME_MIN_SEGMENT_DURATION=1.0

# Real-time silence detection threshold (0.1-1.0, default: 0.6 for faster detection)
DIARIZATION_REALTIME_SILENCE_THRESHOLD=0.6

# Real-time speaker change detection sensitivity (0.1-1.0, default: 0.8 for faster detection)
DIARIZATION_REALTIME_SPEAKER_CHANGE_SENSITIVITY=0.8

# Real-time maximum segments per chunk (default: 4 for faster processing)
DIARIZATION_REALTIME_MAX_SEGMENTS_PER_CHUNK=4

# Real-time enable cross-chunk speaker persistence (default: true for consistency)
DIARIZATION_REALTIME_ENABLE_CROSS_CHUNK_PERSISTENCE=true

# Real-time speaker similarity threshold (0.5-1.0, default: 0.8 for faster matching)
DIARIZATION_REALTIME_SPEAKER_SIMILARITY_THRESHOLD=0.8

# Real-time enable adaptive merging (default: false for speed)
DIARIZATION_REALTIME_ENABLE_ADAPTIVE_MERGING=false

# Real-time enable context awareness (default: false for speed)
DIARIZATION_REALTIME_ENABLE_CONTEXT_AWARENESS=false

# ============================================================================
# Standard Diarization Settings (for file processing)
# ============================================================================

# Minimum segment duration in seconds (default: 2.0)
DIARIZATION_MIN_SEGMENT_DURATION=2.0

# Silence detection threshold (0.1-1.0, default: 0.8)
DIARIZATION_SILENCE_THRESHOLD=0.8

# Speaker change detection sensitivity (0.1-1.0, default: 0.7)
DIARIZATION_SPEAKER_CHANGE_SENSITIVITY=0.7

# Maximum segments per audio chunk (default: 8)
DIARIZATION_MAX_SEGMENTS_PER_CHUNK=8

# Chunking strategy: 'fixed', 'adaptive', 'conversation_aware' (default: adaptive)
DIARIZATION_CHUNK_STRATEGY=adaptive

# Minimum chunk duration in seconds (default: 15.0)
DIARIZATION_MIN_CHUNK_DURATION=15.0

# Maximum chunk duration in seconds (default: 30.0)
DIARIZATION_MAX_CHUNK_DURATION=30.0

# Overlap between chunks in seconds (default: 2.0)
DIARIZATION_OVERLAP_DURATION=2.0

# Enable cross-chunk speaker persistence (default: true)
DIARIZATION_ENABLE_CROSS_CHUNK_PERSISTENCE=true

# Speaker similarity threshold (0.5-1.0, default: 0.85)
DIARIZATION_SPEAKER_SIMILARITY_THRESHOLD=0.85

# Maximum speakers to track (1-10, default: 5)
DIARIZATION_MAX_SPEAKERS=5

# Enable adaptive segment merging (default: true)
DIARIZATION_ENABLE_ADAPTIVE_MERGING=true

# Time threshold for merging segments in seconds (default: 1.5)
DIARIZATION_MERGE_TIME_THRESHOLD=1.5

# Enable context awareness (default: true)
DIARIZATION_ENABLE_CONTEXT_AWARENESS=true

# ============================================================================
# Speech Recognition Configuration
# ============================================================================
ENABLE_LANGUAGE_IDENTIFICATION=true
