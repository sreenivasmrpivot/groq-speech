# Groq Speech SDK Environment Configuration Template
# Copy this file to .env and modify the values as needed
# Never commit your actual .env file to version control!

# Required: Your Groq API key (get from https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Groq API settings
GROQ_API_BASE_URL=https://api.groq.com/openai/v1
GROQ_CUSTOM_ENDPOINT=

# Optional: Model configuration
GROQ_MODEL_ID=whisper-large-v3
GROQ_RESPONSE_FORMAT=verbose_json
GROQ_TEMPERATURE=0.0
GROQ_ENABLE_WORD_TIMESTAMPS=true
GROQ_ENABLE_SEGMENT_TIMESTAMPS=true

# Optional: Speech recognition settings
DEFAULT_LANGUAGE=en-US
DEFAULT_SAMPLE_RATE=16000
DEFAULT_CHANNELS=1
DEFAULT_CHUNK_SIZE=1024

# Optional: Audio device settings
DEFAULT_DEVICE_INDEX=None
DEFAULT_FRAMES_PER_BUFFER=1024

# Optional: Recognition timeouts
DEFAULT_TIMEOUT=30
DEFAULT_PHRASE_TIMEOUT=5
DEFAULT_SILENCE_TIMEOUT=2

# Optional: Audio processing optimization
AUDIO_CHUNK_DURATION=1.0
AUDIO_BUFFER_SIZE=16384
AUDIO_SILENCE_THRESHOLD=0.005
AUDIO_VAD_ENABLED=true

# Optional: Continuous recognition chunking
CONTINUOUS_BUFFER_DURATION=12.0
CONTINUOUS_OVERLAP_DURATION=3.0
CONTINUOUS_CHUNK_SIZE=1024

# Optional: Performance settings
ENABLE_AUDIO_COMPRESSION=true
ENABLE_AUDIO_CACHING=true
MAX_AUDIO_FILE_SIZE=25

# Optional: Advanced features
ENABLE_SEMANTIC_SEGMENTATION=true
ENABLE_LANGUAGE_IDENTIFICATION=true
