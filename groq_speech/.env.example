# =============================================================================
# Groq Speech SDK Environment Configuration
# =============================================================================
# 
# This file contains all configurable environment variables for the Groq Speech SDK.
# Copy this file to .env and modify the values as needed.
# 
# Note: Never commit your actual .env file to version control!
# =============================================================================

# =============================================================================
# GROQ API SETTINGS
# =============================================================================
# These control the core API communication with Groq's services

# Your Groq API key (required for all API calls)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Base URL for Groq API (usually don't change this)
GROQ_API_BASE_URL=https://api.groq.com/openai/v1

# Custom endpoint for enterprise deployments (optional)
# Leave empty for standard Groq API
GROQ_CUSTOM_ENDPOINT=

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# These settings control which AI model is used and how it processes audio

# AI model to use for speech recognition
# Options: whisper-large-v3 (supports translation) or whisper-large-v3-turbo (transcription only)
GROQ_MODEL_ID=whisper-large-v3

# Response format from the API
# Options: json, verbose_json, text
GROQ_RESPONSE_FORMAT=verbose_json

# Temperature setting for model creativity (0.0 = deterministic, 1.0 = creative)
# Range: 0.0 to 1.0
GROQ_TEMPERATURE=0.0

# Enable word-level timestamps in API responses
# Options: true, false
GROQ_ENABLE_WORD_TIMESTAMPS=true

# Enable segment-level timestamps in API responses
# Options: true, false
GROQ_ENABLE_SEGMENT_TIMESTAMPS=true

# =============================================================================
# SPEECH RECOGNITION SETTINGS
# =============================================================================
# Core audio processing parameters for speech recognition

# Default language for speech recognition
# Format: language-region (e.g., en-US, de-DE, fr-FR)
DEFAULT_LANGUAGE=en-US

# Audio sample rate in Hz
# Options: 8000, 16000, 22050, 44100 (16000 recommended for speech)
DEFAULT_SAMPLE_RATE=16000

# Number of audio channels
# Options: 1 (mono), 2 (stereo) - 1 recommended for speech recognition
DEFAULT_CHANNELS=1

# Audio chunk size in samples
# Options: 512, 1024, 2048, 4096 (1024 recommended)
DEFAULT_CHUNK_SIZE=1024

# =============================================================================
# AUDIO DEVICE SETTINGS
# =============================================================================
# Hardware-specific settings for microphone and audio devices

# Default audio device index
# Options: 0, 1, 2, etc. or "None" for auto-detection
DEFAULT_DEVICE_INDEX=None

# Number of frames per buffer for audio processing
# Options: 512, 1024, 2048, 4096 (1024 recommended)
DEFAULT_FRAMES_PER_BUFFER=1024

# =============================================================================
# RECOGNITION TIMEOUTS
# =============================================================================
# Timing parameters that control recognition behavior and responsiveness

# Overall recognition timeout in seconds
# Range: 10 to 300 seconds
DEFAULT_TIMEOUT=30

# Phrase timeout for continuous recognition in seconds
# Range: 1 to 30 seconds
DEFAULT_PHRASE_TIMEOUT=5

# Silence timeout before ending recognition in seconds
# Range: 0.5 to 10 seconds
DEFAULT_SILENCE_TIMEOUT=2

# =============================================================================
# AUDIO PROCESSING OPTIMIZATION
# =============================================================================
# Performance and quality settings for audio processing pipeline

# Duration of audio chunks in seconds
# Range: 0.1 to 5.0 seconds
AUDIO_CHUNK_DURATION=1.0

# Audio buffer size in samples
# Options: 4096, 8192, 16384, 32768 (16384 recommended)
AUDIO_BUFFER_SIZE=16384

# Silence threshold for voice activity detection
# Range: 0.001 to 0.1 (0.005 recommended)
AUDIO_SILENCE_THRESHOLD=0.005

# Enable Voice Activity Detection (VAD)
# Options: true, false
AUDIO_VAD_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Advanced features that affect system performance and resource usage

# Enable audio compression for API transmission
# Options: true, false
ENABLE_AUDIO_COMPRESSION=true

# Enable audio caching for repeated processing
# Options: true, false
ENABLE_AUDIO_CACHING=true

# Maximum audio file size in MB (for free tier compliance)
# Range: 1 to 100 MB
MAX_AUDIO_FILE_SIZE=25

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
# Experimental and advanced capabilities of the speech recognition system

# Enable semantic segmentation for better phrase detection
# Options: true, false
ENABLE_SEMANTIC_SEGMENTATION=true

# Enable automatic language identification
# Options: true, false
ENABLE_LANGUAGE_IDENTIFICATION=true

# =============================================================================
# USAGE EXAMPLES
# =============================================================================
# 
# 1. Basic setup (just API key):
#    GROQ_API_KEY=gsk_your_actual_api_key_here
# 
# 2. High-quality transcription:
#    GROQ_MODEL_ID=whisper-large-v3
#    GROQ_TEMPERATURE=0.0
#    GROQ_ENABLE_WORD_TIMESTAMPS=true
#    GROQ_ENABLE_SEGMENT_TIMESTAMPS=true
# 
# 3. Fast transcription:
#    GROQ_MODEL_ID=whisper-large-v3-turbo
#    GROQ_RESPONSE_FORMAT=text
#    GROQ_ENABLE_WORD_TIMESTAMPS=false
#    GROQ_ENABLE_SEGMENT_TIMESTAMPS=false
# 
# 4. Performance optimization:
#    AUDIO_CHUNK_DURATION=0.5
#    AUDIO_BUFFER_SIZE=8192
#    ENABLE_AUDIO_COMPRESSION=true
#    ENABLE_AUDIO_CACHING=true
# 
# 5. High-accuracy recognition:
#    AUDIO_SILENCE_THRESHOLD=0.001
#    DEFAULT_PHRASE_TIMEOUT=10
#    DEFAULT_SILENCE_TIMEOUT=3
# 
# =============================================================================
# NOTES
# =============================================================================
# 
# - All boolean values can be: true, false, 1, 0, yes, no
# - Numeric values should be valid numbers
# - String values should not contain quotes unless needed
# - Empty values use the default from the code
# - Invalid values will fall back to defaults
# 
# =============================================================================
