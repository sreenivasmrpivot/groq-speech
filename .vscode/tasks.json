        {
            "label": "Start API Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": ["-m", "api.server"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
