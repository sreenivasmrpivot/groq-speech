        {
            "label": "Start Full Stack Development",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start API Server",
                "Start Frontend Development Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
