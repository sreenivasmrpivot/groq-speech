{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Speech Demo - File Basic",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/speech_demo.py",
            "args": [
                "--file", 
                "test1.wav", 
                "--diarize", 
                "false"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
