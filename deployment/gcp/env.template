# Groq Speech GCP GKE GPU Environment Configuration
# Copy this file to .env and fill in your values
# The .env file will be automatically ignored by git
# This deployment uses GKE with GPU for fast diarization (2-5 seconds vs 30-60+ seconds on CPU)

# =============================================================================
# REQUIRED: GCP Configuration
# =============================================================================
PROJECT_ID=your-gcp-project-id
REGION=us-central1
ZONE=us-central1-a
CLUSTER_NAME=groq-speech-gpu

# =============================================================================
# REQUIRED: API Credentials
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
HF_TOKEN=your_huggingface_token_here

# =============================================================================
# API Configuration
# =============================================================================
GROQ_API_BASE=https://api.groq.com/openai/v1
GROQ_MODEL_ID=whisper-large-v3
GROQ_TEMPERATURE=0.0

# =============================================================================
# Audio Configuration
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_FILE_SIZE=25000000

# =============================================================================
# Diarization Configuration (GPU Accelerated)
# Fast diarization with GPU: 2-5 seconds vs 30-60+ seconds on CPU
# =============================================================================
DIARIZATION_MIN_SEGMENT_DURATION=2.0
DIARIZATION_SILENCE_THRESHOLD=0.8
DIARIZATION_MAX_SEGMENTS_PER_CHUNK=8
DIARIZATION_CHUNK_STRATEGY=adaptive
DIARIZATION_MAX_SPEAKERS=5
DIARIZATION_ENABLED_BY_DEFAULT=true

# =============================================================================
# Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_LOG_LEVEL=info
LOG_LEVEL=INFO
ENVIRONMENT=production

# =============================================================================
# UI Configuration
# =============================================================================
NEXT_PUBLIC_VERBOSE=false
NEXT_PUBLIC_DEBUG=false
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# GKE GPU Configuration
# =============================================================================
GPU_TYPE=nvidia-tesla-t4
GPU_COUNT=1

# Scaling Configuration
API_REPLICAS=1
UI_REPLICAS=1

# Resource Configuration
API_MEMORY=16Gi
API_CPU=4
UI_MEMORY=1Gi
UI_CPU=1
