# Groq Speech SDK - Root Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Required Configuration (Shared across all components)
# ============================================================================

# Groq API Key (REQUIRED for all components)
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace Token (REQUIRED for speaker diarization)
HF_TOKEN=your_hf_token_here

# ============================================================================
# Development Configuration
# ============================================================================

# Development Mode (true/false)
DEV_MODE=true

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# Docker Configuration (for deployment)
# ============================================================================

# Docker Environment (development, staging, production)
ENVIRONMENT=development

# API Base URL for Docker (default: https://api.groq.com/openai/v1)
GROQ_API_BASE_URL=https://api.groq.com/openai/v1

# Default Language (default: en-US)
DEFAULT_LANGUAGE=en-US

# Logging settings
GROQ_VERBOSE=false
GROQ_LOG_LEVEL=INFO
