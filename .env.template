# =============================================================================
# Groq Speech SDK - Root Environment Configuration Template
# =============================================================================
# 
# This is the ROOT environment configuration for the entire project.
# All components (groq_speech, api, speech_demo, groq-speech-ui) inherit from this.
# 
# Copy this file to .env and modify the values as needed.
# 
# IMPORTANT: Never commit your actual .env file to version control!
# =============================================================================

# =============================================================================
# CORE API CONFIGURATION (Required)
# =============================================================================
# These variables are required for the SDK to function properly

# Groq API Key (REQUIRED)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace Token (REQUIRED for speaker diarization)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_hf_token_here

# =============================================================================
# GROQ API CONFIGURATION
# =============================================================================
# These variables control the Groq API communication

# Groq API Base URL (optional, defaults to official Groq API)
GROQ_API_BASE=https://api.groq.com/openai/v1

# AI Model ID (optional, defaults to whisper-large-v3)
# Options: whisper-large-v3, whisper-large-v3-turbo
GROQ_MODEL_ID=whisper-large-v3

# Model Temperature (optional, defaults to 0.0)
# Range: 0.0 (deterministic) to 1.0 (creative)
GROQ_TEMPERATURE=0.0

# Response Format (optional, defaults to verbose_json)
# Options: json, verbose_json, text
GROQ_RESPONSE_FORMAT=verbose_json

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================
# These variables control audio processing parameters

# Audio Sample Rate in Hz (optional, defaults to 16000)
# Options: 8000, 16000, 22050, 44100
AUDIO_SAMPLE_RATE=16000

# Audio Channels (optional, defaults to 1)
# Options: 1 (mono), 2 (stereo)
AUDIO_CHANNELS=1

# Maximum Audio File Size in bytes (optional, defaults to 25MB)
# Note: This is in bytes, not MB
MAX_AUDIO_FILE_SIZE=25000000

# =============================================================================
# SPEAKER DIARIZATION CONFIGURATION
# =============================================================================
# These variables control speaker diarization features

# Minimum segment duration in seconds (optional, defaults to 2.0)
DIARIZATION_MIN_SEGMENT_DURATION=2.0

# Silence detection threshold (optional, defaults to 0.8)
# Range: 0.1 to 1.0
DIARIZATION_SILENCE_THRESHOLD=0.8

# Maximum segments per audio chunk (optional, defaults to 8)
DIARIZATION_MAX_SEGMENTS_PER_CHUNK=8

# Chunking strategy (optional, defaults to adaptive)
# Options: fixed, adaptive, conversation_aware
DIARIZATION_CHUNK_STRATEGY=adaptive

# Maximum speakers to track (optional, defaults to 5)
# Range: 1 to 10
DIARIZATION_MAX_SPEAKERS=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# These variables control logging behavior

# Enable verbose logging (optional, defaults to false)
# Options: true, false
GROQ_VERBOSE=false

# Log level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR
GROQ_LOG_LEVEL=INFO

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# These variables control the API server behavior

# API Server Host (optional, defaults to 0.0.0.0)
API_HOST=0.0.0.0

# API Server Port (optional, defaults to 8000)
API_PORT=8000

# Enable API Server CORS (optional, defaults to true)
API_CORS_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# These variables control the frontend behavior

# Frontend API URL (optional, defaults to http://localhost:8000)
# This is where the frontend connects to the backend API
NEXT_PUBLIC_API_URL=http://localhost:8000

# Enable frontend verbose logging (optional, defaults to false)
NEXT_PUBLIC_VERBOSE=false

# Enable frontend debug mode (optional, defaults to false)
NEXT_PUBLIC_DEBUG=false
