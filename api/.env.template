# =============================================================================
# Groq Speech API - Backend Environment Configuration Template
# =============================================================================
# 
# This file contains ONLY API server-specific environment variables.
# The API inherits core configuration from the root .env file.
# 
# Copy this file to .env and modify the values as needed.
# 
# IMPORTANT: Never commit your actual .env file to version control!
# =============================================================================

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# These variables are specific to the FastAPI backend server

# API Server Host (optional, defaults to 0.0.0.0)
# This controls which network interface the server binds to
API_HOST=0.0.0.0

# API Server Port (optional, defaults to 8000)
# This controls which port the server listens on
API_PORT=8000

# Enable CORS (optional, defaults to true)
# This controls whether CORS is enabled for cross-origin requests
API_CORS_ENABLED=true

# CORS Allowed Origins (optional, defaults to *)
# Comma-separated list of allowed origins for CORS
API_CORS_ORIGINS=*

# =============================================================================
# API PERFORMANCE CONFIGURATION
# =============================================================================
# These variables control API server performance

# Maximum request size in bytes (optional, defaults to 100MB)
# This limits the size of uploaded audio files
API_MAX_REQUEST_SIZE=104857600

# Request timeout in seconds (optional, defaults to 300)
# This controls how long requests can take before timing out
API_REQUEST_TIMEOUT=300

# Worker processes (optional, defaults to 1)
# This controls the number of worker processes for the API server
API_WORKERS=1

# =============================================================================
# API LOGGING CONFIGURATION
# =============================================================================
# These variables control API-specific logging

# Enable API request logging (optional, defaults to true)
API_LOG_REQUESTS=true

# Enable API response logging (optional, defaults to false)
API_LOG_RESPONSES=false

# API log level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR
API_LOG_LEVEL=INFO
