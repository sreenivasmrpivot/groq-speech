# Groq Speech SDK - API Server Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Required Configuration
# ============================================================================

# Groq API Key (REQUIRED)
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace Token (REQUIRED for speaker diarization)
HF_TOKEN=your_hf_token_here

# ============================================================================
# API Server Configuration (optional)
# ============================================================================

# API Server Host (default: 0.0.0.0)
API_HOST=0.0.0.0

# API Server Port (default: 8000)
API_PORT=8000

# CORS Origins (comma-separated, default: http://localhost:3000)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Log Level (default: INFO)
LOG_LEVEL=INFO

# Environment (default: development)
ENVIRONMENT=development

# ============================================================================
# Model Configuration (optional)
# ============================================================================

# Groq Model ID (default: whisper-large-v3)
GROQ_MODEL_ID=whisper-large-v3

# Model Temperature (default: 0.0)
GROQ_TEMPERATURE=0.0

# ============================================================================
# Audio Configuration (optional)
# ============================================================================

# Audio Sample Rate (default: 16000)
AUDIO_SAMPLE_RATE=16000

# Audio Channels (default: 1)
AUDIO_CHANNELS=1

# Maximum Audio File Size in bytes (default: 25MB)
MAX_AUDIO_FILE_SIZE=25000000

# ============================================================================
# Diarization Configuration (optional)
# ============================================================================

# Minimum segment duration in seconds (default: 2.0)
DIARIZATION_MIN_SEGMENT_DURATION=2.0

# Silence detection threshold (0.1-1.0, default: 0.8)
DIARIZATION_SILENCE_THRESHOLD=0.8

# Maximum segments per audio chunk (default: 8)
DIARIZATION_MAX_SEGMENTS_PER_CHUNK=8

# Chunking strategy: 'fixed', 'adaptive', 'conversation_aware' (default: adaptive)
DIARIZATION_CHUNK_STRATEGY=adaptive

# Maximum speakers to track (1-10, default: 5)
DIARIZATION_MAX_SPEAKERS=5

# Logging settings
GROQ_VERBOSE=false
GROQ_LOG_LEVEL=INFO
